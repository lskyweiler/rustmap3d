{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Gen PyStubs",
            "type": "shell",
            "command": [
                "cargo run stub_gen &&",
                "uvx ruff format rustmap3d.pyi &&",
                "uvx ruff check --select I --fix rustmap3d.pyi"
            ],
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}